{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    }
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}
